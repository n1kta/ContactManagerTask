@model IEnumerable<ContactManager.MSSQL.Models.Manager>

<div class="pt-4">
    <form asp-action="ReadFile" asp-controller="Home" method="post" enctype="multipart/form-data" class="d-flex justify-content-center align-items-center">
        <input class="form-control-file" type="file" name="uploadedFile" />
        <input class="btn btn-primary" type="submit" value="Import" />
    </form>
</div>

<div class="list-data pt-4">
    <table id="dataTable" class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date of birth</th>
                <th>Married</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var manager in Model)
        {
            <tr>
                <td>@manager.Name</td>
                <td>@manager.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>@manager.Married.ToString()</td>
                <td>@manager.Phone</td>
                <td>@manager.Salary</td>
                <td>
                    <form asp-action="UpdateManager" asp-controller="Home" method="get" asp-route-id="@manager.Id" class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-warning"><i class="fa fa-edit"></i></button>
                    </form>
                </td>
                <td>
                    <form asp-action="DeleteManager" asp-controller="Home" asp-route-id="@manager.Id" method="post" class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash-alt"></i></button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

